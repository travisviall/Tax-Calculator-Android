<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/totals_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TotalsFragment">

    <TextView
        android:id="@+id/total_amount_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/total_amount_text"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/total_amount_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_amount_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/total_amount"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_amount_caption"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="viewEnd"/>
</androidx.constraintlayout.widget.ConstraintLayout>